                {% endfor %}

				{% for searchArtist in searchResultArtist %}
                
                <figure class="snip1104">
					<a href="{{baseUrl}}/film/{{searchArtist.id}}">
						<img src="assets/img/{{searchArtist.img}}" class="d-block w-100" alt="l1">
					</a> 
                    
					<figcaption>
						<h2>
							<span>{{searchArtist.lastname}}</span>
							<span>{{searchArtist.firstname}}</span>
						</h2>
					</figcaption>	
				</figure>
                {% endfor %}
				
			</div>
