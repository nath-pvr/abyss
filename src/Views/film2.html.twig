{% extends "template.html.twig" %}


{% block title %}
    Film | {{ artists.firstname }}
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ baseUrl }}/assets/css/film2.css">
    <link rel="stylesheet" href="{{ baseUrl }}/assets/css/inscription.css">
{% endblock %}

{% block body %}
    <div class="row">
        {% if movie != false %}
        <div class="col-12">
            <img src="{{ baseUrl }}/assets/img/{{ movie.img }}" alt="Affiche du film: {{ movie.title }}">
        </div>
        <div class="content-div-title">
            <h1 class="titles text-center text-nowrap">{{ movie.title }}</h1>
        </div>
        <div class="content-bg col-12 px-4 mb-5">
            <div class="content-div col-12">
                <h5 class="titles text-center text-nowrap">Réalisateur(s) :</h5>
                {# TODO Boucle for pour rechercher le réalisateur du film #}
                <h5 class="titles text-center text-nowrap">Distribution :</h5>
                {% for artist in artists %}
                    <p class="text-center">{{ artist.firstname }} {{ artist.lastname }}</p>
                {% endfor %}
            </div>
            <div class="content-div col-12">
                <h5 class="titles text-center text-lg-start">Synopsis :</h5>
                <p class="col-12">{{ movie.synopsis }}</p>
            </div>
            <div class="content-div mt-5 col-12">
                <h5 class="titles text-center text-lg-start text-nowrap">Commentaires :</h5>
            </div>
            <div class="col-12 mt-3 mb-5">
                    {% for comment in comments %}
                        <div class="grey-bg d-flex justify-content-between">
                            <div class="d-flex flex-column">
                                <span>{{ comment.pseudo }}</span>
                                <span>{{ comment.date_comment }}</span>
                            </div>
                            <div>
                                <span class="my-auto">{{ comment.comment }}</span>
                            </div>
                        </div>
                    {% endfor %}
            </div>
            {% if session.flash.errors is defined %}
                    <div class="alert alert-danger">
                        <ul>
                            {% for error in session.flash.errors %}
                                <li class="text-center">{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
            {% elseif session.flash.success is defined %}
                    <div class="alert alert-success">
                        <ul>
                            {% for good in session.flash.success %}
                                <li class="text-center">{{ good }}</li>
                            {% endfor %}
                        </ul>
                    </div>
            {% endif %}
            <form action="" method="post">
                <textarea class="col-12 mt-3 ml-3" name="commentaire" id="commentaires" cols="135" rows="8" placeholder="Votre commentaire..."></textarea>
                <div class="submit-button">
                    <button class="button col-6 col-lg-2 mt-3" type="submit" name="submit">Envoyer</button>
                </div>
            </form>
        </div>
        {% else %}
            <h1>Aucun film n'a été trouvé</h1>
        {% endif %}
    </div>
