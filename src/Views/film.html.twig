{# {% extends "template.html.twig" %} #}
<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/png" href="../assets/img/favicon.png"/>
		<link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
		{% block css %}
			<link rel="stylesheet" type="text/css" href="{{ baseUrl }}/assets/css/style-film.scss">
			<link rel="stylesheet" href="{{ baseUrl }}/assets/css/bulles.css">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
			<title>
				{% block title %}Film
				{% endblock %}
			</title>
		{% endblock %}

		{% block body %}
				<img src="{{ baseUrl }}/assets/img/inscription.png" alt="img" class="abyss marge">

			{% if movie != false %}

				<div class="container">
					<div class="row">
						<div class="cellphone-container">
							<div class="movie">
								<div class="movie-img"></div>
								<div class="text-movie-cont">
									<div class="mr-grid1">
										<div class="col1">
											<h1 class="title">
												{{ movie.title }}
											</h1>
											<ul class="movie-gen">
												<li class="color li">{{ movie.year }}</li>
												<li class="color li">{{ movie.gender }}</li>
											</ul>
										</div>
									</div>
									<div class="mr-grid flex">
										<div class="m-xy m-left">
											<h1>Réalisateur</h1>
											<p class="movie-actors color">
												{{ artists.firstname }}
												{{ artists.lastname }}<br>
												{{ artists.firstname }}
												{{ artists.lastname }}<br>
												{{ artists.firstname }}
												{{ artists.lastname }}</p>
										</ul>
									</div>
								</div>
								<div class="mr-grid summary-row">
									<div class="col2">
										<h3>SYNOPSIS</h3>
									</div>
								</div>
								<div class="mr-grid">
									<div class="col1">
										<p class="movie-description color">{{ movie.synopsis }}</p>
									</div>
								</div>
								<div class="mr-grid">
									<div class="col1">
										<h3>Commentaires</h3>
										<textarea name="commentaire" id="" cols="125" rows="10" placeholder="Votre commentaire..."></textarea>
										<input type="submit" value="Envoyer">
									</div>
								</div>
							</div>
						</div>
					</div>

				{% else %}
					<h1>Film non trouvé</h1>
				{% endif %}
			</div>
		</head>
	</html>
