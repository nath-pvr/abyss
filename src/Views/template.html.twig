<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Accueil{% endblock %}</title>
    <link rel="icon" type="image/png" href="../assets/img/favicon.png"/>
    <link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    {% block css %}
    <link rel="stylesheet" href="{{ baseUrl }}/assets/css/style.css">
    {% endblock %}
</head>
<body>
    <div class="container">
    {% block navigation %}

	<nav class="navbar navbar-expand-lg fixed-top py-3">
		<div class="container-fluid">
			<a class="navbar-brand"><img src="assets/img/inscription.png" alt="abyss2" class="abyss" style="margin-left: 10%;"></a>
			<form action="{{baseUrl}}/search" method="POST" class="d-flex" style="margin-right: 10%;">
				<ul>
					{% if session.auth is defined %}
						<li>
							<a href="{{ baseUrl }}/logout">Se d√©connecter</a>
						</li>
					{% else %}
						<li>
							<a href="{{ baseUrl }}/inscription">Inscription</a>
						</li>
						<li>
							<a href="{{ baseUrl }}/connexion">Se connecter</a>
						</li>
					{% endif %}
				</ul>
				{% if success.confirmationMessage is defined or success.confirmation is defined %}
						<div class="alert alert-success">
							<ul>
								{% for good in success %}
									<li class="text-center">{{ good }}</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
					{% if session.flash.errors is defined %}
						<div class="alert alert-danger">
							<ul>
								{% for error in session.flash.errors %}
									<li class="text-center">{{ error }}</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
					{% if session.flash.success is defined %}
						<div class="alert alert-success">
							<ul>
								{% for good in session.flash.success %}
									<li class="text-center">{{ good }}</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				<input class="form-control me-2 outline-danger" type="search" id="search" name="search" placeholder="Cherche dans les Abyss" aria-label="Search">
				<button class="btn btn-danger" type="submit">Recherche</button>
			</form>
		</div>
	</nav>

{% endblock %}

    {% block body %}
    {% endblock %}
    </div>
    {% block js %}
    {% endblock %}
</body>
</html>